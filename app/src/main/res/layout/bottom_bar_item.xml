<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="80dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:id="@+id/bottom_bar_menu_item_img"
        android:src="@drawable/fragment_home"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_bar_menu_item_img"
        android:textSize="10dp"
        android:layout_gravity="center"
        android:text="Mystash"
        android:id="@+id/bottom_bar_menu_item_text" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/bottom_bar_menu_item_badge_text"
        android:layout_marginLeft="35dp"
        android:background="@color/Aquamarine"
        android:textSize="20dp" />
