<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.fragments.ScanFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
            <TextureView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/camera_texture"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/scanner"
                android:layout_marginBottom="53dp"
                android:padding="40dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/manual_add"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:padding="4dp"
                android:layout_marginBottom="60dp"
                android:layout_marginStart="60dp"
                android:background="@drawable/manual_add_button"
                android:id="@+id/manual_add"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/new_scan_button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/clear_button"
                android:id="@+id/clear"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/flashlight_off_white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:layout_marginBottom="60dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/torch_button_off"
                android:id="@+id/torch"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="@color/Beige" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/scanner_list">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_stash"
                android:gravity="center"
                android:id="@+id/fragment_name"
                android:textSize="18sp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="1dp"
                android:background="@drawable/scanner_list_inner"
                android:id="@+id/scanned_item_list">
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
